<h1>Create new portfolio item</h1>
<%= form_with(model: @portfolio_item, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :portfolio_title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :portfolio_body %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |technology_form| %>
      <li>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </li>
    <% end %>
  </ul>

<!--   <div class="field">
    <%= form.label :main_image %>
    <%= form.text_field :main_image, id: :portfolio_main_image %>
  </div>

  <div class="field">
    <%= form.label :thumb_image %>
    <%= form.text_field :thumb_image, id: :portfolio_thumb_image %>
  </div> -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
